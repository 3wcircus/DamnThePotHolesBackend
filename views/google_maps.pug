extends ./layout

block content
    style.
        #map {
            width: 100%;
            height: 82vh;
        }
    // this buttton was visible when I added bootstrapped so i commented it out
    //.btn-group.d-flex(role='group')
    //    a.btn.btn-primary(href='https://developers.google.com/maps/documentation/javascript/tutorial', target='_blank').w-100
    //        i.far.fa-check-square.fa-sm
    hr
    #map

    script.
        var map;
        var holes = [#{pot_holes}];
        console.log(holes);
        function initMap() {
            console.log("*** INIT MAP ***");
            let myMap = new google.maps.Map(document.getElementById('map'), {
                // TODO: Let the user configure start location
                center: {lat: 35.1940644, lng: -89.7663223},
                zoom: 15
            });

            let redIcon = {url: "http://maps.google.com/mapfiles/ms/icons/red-dot.png"};
            let yellowIcon = {url: "http://maps.google.com/mapfiles/ms/icons/yellow-dot.png"};
            let blueIcon = {url: "http://maps.google.com/mapfiles/ms/icons/blue-dot.png"};
            let defaultIcon = {
                url: 'data:image/png;base64,',
                scaledSize: new google.maps.Size(23, 33)
            };

            holes.forEach(function (sc) {
                //     console.log(`*** MAKING MARKERS ***`);
                let myLat = parseFloat(sc.lat);
                let myLong = (parseFloat(sc.long) * 1);
                console.log(`*** MAKING MARKERS ${myLat} ${myLong} ***`);
                let myLatlng = new google.maps.LatLng({lat: myLat, lng: myLong});
                console.log(myLatlng);
                let myMarker = (parseInt(sc.marker));
                console.log(`My Marker: ${myMarker}`);
                let myIcon = null;

                switch (myMarker) {
                    case 0:
                        myIcon = redIcon;
                        break
                    case 60:
                        myIcon = yellowIcon;
                        break
                    case 240:
                        myIcon = blueIcon ;
                        break
                    default:
                        myIcon = defaultIcon;

                }

                let marker = new google.maps.Marker({
                    position: myLatlng,
                    title: `${sc.date} : ${sc.userTag}\nlat:${sc.lat}, long:${sc.long}, x:${sc.x}, y:${sc.y}, z:${sc.z}`,
                    map: myMap,
                    icon: myIcon,
                    animation: google.maps.Animation.DROP
                });

            });
        }

    script(async defer src=`https://maps.googleapis.com/maps/api/js?key=${google_map_api_key}&callback=initMap`)
